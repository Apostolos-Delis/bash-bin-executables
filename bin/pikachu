NOCOLOR = Color("NOCOLOR", "39m", "49;")

styles = {
    "NO STYLE": "0;",
    "BOLD": "1;",
    "FADED": "2;",
    "UNDERLINED": "4;",
    "BLINKING": "5;",
}

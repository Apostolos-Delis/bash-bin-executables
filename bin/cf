errormsg(){
    >&2 echo -e "\e[0;49;91m$1\e[0m"
}

create_cpp_file(){
    echo > $1
    echo "#include <iostream>" >> $1
    echo >> $1
    echo >> $1
    echo "int main(int argc, char** args){" >> $1
    echo "    return 0;" >> $1
    echo "}" >> $1
    echo >> $1
}

create_c_file(){
    echo > $1
    echo "#include <stdio.h>" >> $1
    echo >> $1
    echo >> $1
    echo "int main(int argc, char** args){" >> $1
    echo "    return 0;" >> $1
    echo "}" >> $1
    echo >> $1
}

create_py_file(){
    echo "#!/usr/bin/env python3" >> $1
    echo "# coding: utf8" >> $1
    echo >> $1
    echo >> $1
    echo "if __name__ == \"__main__\":" >> $1
    echo "    pass" >> $1
    echo >> $1
}

create_bash_file(){
    echo "#!/usr/bin/env bash" >> $1
    echo >> $1
}

create_nodejs_file(){
    echo "#!/usr/bin/env node" > $1
    echo >> $1
}

help_message(){
    echo "Script to create new files for certain programming languages
Version: $VERSION
USAGE: cf [OPTIONS] <FILE>

Options:
    --version           Show the version of cf
    -h, --help          Show this help message
    -p, --python        Process FILE with python installations
    -c, --c-basics      Process FILE with C language basics
    -C, --cpp           Process FILE with C++ language basics
    -j, --node-js       Process FILE with node.js language basics
    -b, --bash          Process FILE with Bash language basics
    -x, --non-exec      Don't make the file executable"
    exit 0
}


VERSION="1.2"

PYTHON=false
CPP=false
C=false
BASH=false
NODE_JS=false
language=false

CHMOD=true
FILE=""

if [ $# -eq 0 ]
then
    help_message
fi


while test $# -gt 0
do 
    case "$1" in 
        -h|--help)
            help_message
            ;;
        -p|--python)
            if [ language = true ]
            then
                errormsg "ERROR: can only have one of -c, -p, -b -j, or -C options"
                exit -1
            fi
            PYTHON=true
            language=true
            shift 
            ;;
        -c|--c-basics)
            if [ language = true ]
            then
                errormsg "ERROR: can only have one of -c, -p, -b -j, or -C options"
                exit -1
            fi
            C=true
            language=true
            shift
            ;;
        -C|--cpp)
            if [ language = true ]
            then
                errormsg "ERROR: can only have one of -c, -p, -b -j, or -C options"
                exit -1
            fi
            CPP=true
            language=true
            shift 
            ;;
        -b|--bash)
            if [ language = true ]
            then
                errormsg "ERROR: can only have one of -c, -p, -b -j, or -C options"
                exit -1
            fi
            BASH=true
            shift 
            ;;
        -j|--node-js)
            if [ language = true ]
            then
                errormsg "ERROR: can only have one of -c, -p, -b -j, or -C options"
                exit -1
            fi
            NODE_JS=true
            language=true
            shift
            ;;
        -x|--non-exec)
            CHMOD=false
            shift
            ;;
        --version)
            echo "cf version $VERSION"
            exit 0
            ;;
        *)
            FILES=$@
            break
            ;;
    esac 
done


for FILE in $FILES
do
    if [ -e $FILE ]
    then
        errormsg "ERROR: $FILE already exists!"
        exit -1
    fi

    touch $FILE

    if [ $CPP = true ]
    then
        create_cpp_file $FILE
    fi

    if [ $C = true ]
    then
        create_c_file $FILE
    fi

    if [ $PYTHON = true ]
    then
        create_py_file $FILE
    fi

    if [ $BASH = true ]
    then
        create_bash_file $FILE
    fi

    if [ $NODE_JS = true ]
    then
        create_nodejs_file $FILE
    fi

    if [ $CHMOD = true ]
    then
        chmod +x $FILE
    fi
done
